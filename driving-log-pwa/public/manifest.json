  "shortcuts": [
    {
      "name": "新規運転記録",
      "short_name": "新規記録",
      "description": "新しい運転記録を開始",
      "url": "/new-log",
      "icons": [
        {
          "src": "/icons/icon-96x96.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "履歴表示",
      "short_name": "履歴",
      "description": "過去の運転記録を表示",
      "url": "/history",
      "icons": [
        {
          "src": "/icons/icon-96x96.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "設定",
      "short_name": "設定",
      "description": "アプリの設定を変更",
      "url": "/settings",
      "icons": [
        {
          "src": "/icons/icon-96x96.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "エクスポート",
      "short_name": "出力",
      "description": "運転記録をエクスポート",
      "url": "/export",
      "icons": [
        {
          "src": "/icons/icon-96x96.svg",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "ダッシュボード画面（デスクトップ）"
    },
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "ダッシュボード画面（モバイル）"
    },
    {
      "src": "/screenshots/mobile-new-log.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "新規運転記録画面"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },
  "handle_links": "preferred",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      },
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+drivinglog",
      "url": "/import?data=%s"
    }
  ]
}